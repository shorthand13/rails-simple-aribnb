<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>空室</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>'<strong><%= @query %></strong>'で検索した結果、<strong><%= Flat.count %></strong> 部屋中、<strong><%= @flats.count %> </strong>部屋見つけました。</p>
      <% else %>
        <p>全 <%= Flat.count %> 部屋</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="fa fa-yen" style="font-size:20px"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "ml-3 text-warning" %>
            <%= link_to "Remove", flat_path(flat), class: "ml-3 text-danger", method: :delete, data: { confirm: "Delete this flat?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
