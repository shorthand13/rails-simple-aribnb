 <div class="mt-3">
  <%= form_for(@flat) do |f| %>
    <div class="form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: 'form-control' %>
    </div>

     <div class="form-group">
      <%= f.label :お部屋の画像 %>
      <%= f.file_field :picture_url, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :お部屋の特徴 %>
      <%= f.text_area :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :収容人数 %>
      <%= f.number_field :number_of_guests, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :一泊の料金 %>
      <%= f.number_field :price_per_night, class: 'form-control' %>
    </div>
    <div class="mt-3">
      <%= f.submit class: 'btn btn-success btn-lg btn-block' %>
      <%= link_to '戻る', :back, class: 'btn btn-success btn-lg btn-block mt-2' %>
    </div>
  <% end %>
</div>
